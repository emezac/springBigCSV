
<%= simple_form_for(@datum) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :identifier %>
    <%= f.input :rownumber %>
    <%= f.input :phone %>
    <%= f.input :email %>
    <%= f.input :first %>
    <%= f.input :last %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

<%= simple_form_for @logupload, validate: true, :html => {:multipart => true} do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :identifier, validate: {presence: true}, :label => 'Identifier' %>
 
    <%= f.input :filename, as: :file, :label => 'Filename', class: "button" %>
    <%= f.input :filelocation, :as => :hidden, input_html: {:value => ::Rails.root.join('storage') } %>
    <%= f.input :date, :as => :hidden, input_html: {:value => Time.now} %>
    <%= f.input :version, :as => :hidden, input_html: {:value => Time.now.to_i} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
